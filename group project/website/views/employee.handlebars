<html>

<h3>Add Employee</h3>


<h3>Employees:</h3>
<table>
    <thead>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        
    </thead>
    <tbody>
        {{#each employee}}
        <tr>
             <td>{{employeeId}}</td>
            <td>{{fname}}</td>
            <td>{{lname}}</td>
            <td><button onclick="deleteemployee({{employeeId}})">Delete</button></td>
            <td><a href="/employee/{{id}}">Update</a></td>
            <td><button onclick="addtoCart({{id}})">Cart</button></td>
        </tr>
        {{/each}}
    </tbody>
     <form id ="addemployee" action="/employee" method="post">
    First Name: <input type= "text" name= "fname"><br>
    Last Name: <input type= "text" name= "lname"><br>
    
    <input type="submit" value="Submit">
    </table>
    </html>